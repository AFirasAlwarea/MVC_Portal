                        }
                    </select>
                </div>
            </div>*@

            <div class="form-group">
                <div class="col-md-10 col-md-offset-2">
                    <button type="reset" class="btn btn-warning">Reset</button>
                    <button type="submit" value="Create" class="btn btn-success">Submit</button>
                </div>
            </div>

        </fieldset>
    </div>
}

