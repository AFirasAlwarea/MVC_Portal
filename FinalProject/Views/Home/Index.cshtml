@{
    ViewBag.Title = "Home Page";
    var nyheter = ViewBag.news;
    var engemang = ViewBag.events;
    var spelare = ViewBag.players;
}

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1">


    <link href="~/Content/myStyle.css" rel="stylesheet" />

</head>

<div class="jumbotron">
    <h1><img src="~/Content/Photos/download (1).jpg" width="100" height="60" />Champions Team Portal</h1>

    <p class="lead">This project has been studied and programmed by both of Rami Sulibi and Ahmad Firas Alwarea. And it reflects everything that we have learned during the ASP.NET course.</p>
    <p><a href="git@github.com:ramisulebi93/ChampionsTeam.git" class="btn btn-primary btn-lg">To GitHub &raquo;</a></p>
</div>

<div id="myCarousel" class="carousel slide row img-thumbnail hidden-xs hidden-sm col-md-12" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="http://2.bp.blogspot.com/-ummldM3S3ug/VIvXLz1TjPI/AAAAAAAAApE/IE9TL4Hg7e4/s1600/Bayern%2BMunchen%2BWallpaper%2B02.jpg" width="460" height="345">
        </div>

        <div class="item">
            <img src="http://i.imgur.com/u0OrSCQ.jpg" width="460" height="345">
        </div>

        <div class="item">
            <img src="http://s.weltsport.net/bilder/teamfotos/640x360/222.jpg" width="460" height="345">
        </div>

        <div class="item">
            <img src="http://footb-all.ru/german_national_football_team_flag_by_steeldutches.jpg" width="460" height="345">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div>
    <div class="col-md-4">
        <h2>News</h2>

        @foreach (var item in nyheter)
            {
            <p>&#x25BA; @item.Subject</p>

        }

    </div>
    <div class="col-md-4">
        <h2>Events</h2>
        @foreach (var item in engemang)
            {
            <p>&#x27A3; @item.Subject</p>

        }
    </div>
    <div class="col-md-4">
        <h2>Our Players</h2>
        <table class="table-striped table-hover">
            @foreach (var item in spelare)
            {
                <tr>
                    <td class="col-md-6">&#x26BD; @item.Fullname</td>

                    <td id="SecondField" class="col-md-offset-2 col-md-4">@item.Position</td>
                </tr>
            }
        </table>
    </div>
</div>
