
@model FinalProject.Models.RecievedMessages

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Message</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Body, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Model.Body
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.timesent, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Model.timesent
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.ReceptionId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Model.ReceptionId
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SenderId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Model.SenderId
            </div>
        </div>


    </div>




}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
